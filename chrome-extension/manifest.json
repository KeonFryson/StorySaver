{
	"manifest_version": 3,
	"name": "Story Saver",
	"version": "1.0",
	"description": "Save your reading progress.",
	"permissions": [ "storage", "scripting", "activeTab" ],
	"host_permissions": [
		"https://forums.spacebattles.com/*",
		"https://forums.sufficientvelocity.com/*",
		"https://forum.questionablequesting.com/*",
		"https://storysaver.k-m-fryson112115.workers.dev/*"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon.png",
			"32": "icon.png",
			"128": "icon.png"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"https://forums.spacebattles.com/threads/*",
				"https://forums.sufficientvelocity.com/threads/*",
				"https://forum.questionablequesting.com/threads/*"
			],
			"js": [ "content.js" ]
		}
	]
}
